                            </div>
                        </div>
                    </div>

                    <!-- Contrato de la API -->
                    <div class="form-section">
                        <h3 class="section-title">
                            <i class="fas fa-file-code" style="color: #2596be;"></i>
                            Contrato de la API <span class="text-danger">*</span>
                        </h3>
                        
                        <div class="contract-editor-container">
                            <div class="editor-tabs">
                                <button type="button" class="editor-tab active" data-tab="write">
                                    <i class="fas fa-edit"></i> Escribir c√≥digo
                                </button>
                                <button type="button" class="editor-tab" data-tab="upload">
                                    <i class="fas fa-upload"></i> Subir archivo
                                </button>
                            </div>
                            
                            <div class="editor-content">
                                <!-- Panel de escritura -->
                                <div class="editor-panel active" id="writePanel">
                                    <textarea id="contractContent" name="contractContent" placeholder="Pega aqu√≠ el c√≥digo de tu API (OpenAPI, Swagger, etc.)...">
{
  "openapi": "3.0.0",
  "info": {
    "title": "Mi API",
    "version": "1.0.0",
    "description": "Descripci√≥n de mi API"
  },
  "paths": {
    "/hello": {
      "get": {
        "summary": "Saludo",
        "responses": {
          "200": {
            "description": "Mensaje de saludo",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}</textarea>
                                </div>
                                
                                <!-- Panel de subida -->
